syntax enable 											"enable syntax highlightingi

set number 											"add line numbers
set relativenumber									"show line numbers relative to cursors
set mouse=a 										"permit copying from vim to clipboard
set hlsearch 										"enable highlight search
set incsearch 										"see search highlights while typing
set autoindent
set list 											"enable whitespaces
set listchars=tab:>-,trail:~,extends:>,precedes:< 	"configure whitespaces
set titlestring=%-25.55F\ %a%r%m titlelen=70		"show path and filename of current file
set title											"set title
set linebreak 										"avoid wrapping a line in the middle of a word
set wrap 											"enable line wrapping
set tabstop=4 										"indent with 4
set shiftround										"round to nearest when shifting
set shiftwidth=4 									"shift with 4
set scrolloff=5										"number of screen lines above and below cursor when scrolling
set wildmenu										"display menu when using command line
set noerrorbells									"disable beeeeeps
set visualbell										"show visual flash instead of beep
set background=dark									"display colors better suited to dark backgrounds
set autoread										"refresh files if no unsaved changes
